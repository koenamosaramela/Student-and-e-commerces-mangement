@model ASPNETCore_DB.Models.Student
@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Student Details</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.StudentNumber" class="btn btn-primary me-2">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center mb-4 mb-md-0">
                    <div class="profile-img-container">
                        <img src="@WebConstants.ImagePath@Model.Photo"
                             class="img-thumbnail profile-img"
                             alt="Student Photo"
                             style="max-width: 250px; border: 3px solid #dee2e6">
                        <div class="mt-3">
                            <span class="badge bg-info text-dark">
                                Enrolled: @Model.EnrollmentDate.ToString("d")
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="row">
                        <div class="col-sm-6 mb-3">
                            <h5 class="detail-label">Student Number</h5>
                            <p class="detail-value">@Model.StudentNumber</p>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <h5 class="detail-label">Full Name</h5>
                            <p class="detail-value">@Model.FirstName @Model.Surname</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 mb-3">
                            <h5 class="detail-label">Email</h5>
                            <p class="detail-value">
                                <a href="mailto:@Model.Email" class="text-decoration-none">
                                    <i class="bi bi-envelope"></i> @Model.Email
                                </a>
                            </p>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <h5 class="detail-label">Enrollment Date</h5>
                            <p class="detail-value">
                                <i class="bi bi-calendar"></i> @Model.EnrollmentDate.ToString("D")
                            </p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <h5 class="detail-label">Academic Status</h5>
                        <p class="detail-value">
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Active
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-img {
        transition: transform 0.3s ease;
    }

        .profile-img:hover {
            transform: scale(1.03);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

    .detail-label {
        color: #6c757d;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .detail-value {
        font-size: 1.1rem;
        padding: 0.5rem;
        background-color: #f8f9fa;
        border-radius: 0.25rem;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
    }

    .badge {
        font-size: 0.85em;
        padding: 0.35em 0.65em;
    }
</style>