<!-- Product Modal -->
<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Product Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img id="modalProductImage" src="" class="img-fluid modal-img mb-3" alt="Product Image">
                <h3 id="modalProductName"></h3>
                <div class="price-tag mb-2" id="modalProductPrice"></div>
                <p id="modalProductDesc" class="mb-3"></p>

                <h5>Specifications</h5>
                <table class="table table-bordered" id="modalProductSpecs">
                    <!-- Will be populated by JavaScript -->
                </table>

                <button class="btn btn-primary mt-3 w-100">
                    <i class="bi bi-cart-plus"></i> Add to Cart
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize modal with product data
        document.getElementById('productModal').addEventListener('show.bs.modal', function(event) {
            const button = event.relatedTarget;

            // Set basic product info
            document.getElementById('modalProductName').textContent = button.getAttribute('data-product-name');
            document.getElementById('modalProductPrice').textContent = button.getAttribute('data-product-price');
            document.getElementById('modalProductDesc').textContent = button.getAttribute('data-product-desc');
            document.getElementById('modalProductImage').src = button.getAttribute('src');

            // Parse and display specifications
            const specs = JSON.parse(button.getAttribute('data-product-specs'));
            const specsTable = document.getElementById('modalProductSpecs');
            specsTable.innerHTML = '';

            for (const [key, value] of Object.entries(specs)) {
                const row = document.createElement('tr');
                row.innerHTML = `<td><strong>${key}</strong></td><td>${value}</td>`;
                specsTable.appendChild(row);
            }
        });
    </script>
}