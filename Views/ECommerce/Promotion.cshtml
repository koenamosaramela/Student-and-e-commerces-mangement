@{
    ViewData["Title"] = "Current Promotions";
}

<div class="promo-carousel-container">
    <div id="promoCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          
            <div class="carousel-item active">
                <img src="/images/airport.jpg" class="d-block w-100" alt="Summer Sale">
                <div class="carousel-caption">
                    <h3>Summer Sale</h3>
                    <p>Up to 50% off selected items</p>
                    <a href="/ECommerce" class="btn btn-primary">Shop Now</a>
                </div>
            </div>

            <div class="carousel-item">
                <img src="/images/watch.jpeg" class="d-block w-100" alt="New Arrivals">
                <div class="carousel-caption">
                    <h3>New Arrivals</h3>
                    <p>Discover our latest products</p>
                    <a href="/ECommerce" class="btn btn-primary">Shop Now</a>
                </div>
            </div>

            <div class="carousel-item">
                <img src="/images/wifi.jpeg" class="d-block w-100" alt="Free Shipping">
                <div class="carousel-caption">
                    <h3>Free Shipping</h3>
                    <p>On orders over R500</p>
                    <a href="/ECommerce" class="btn btn-primary">Shop Now</a>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#promoCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#promoCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>

<style>
    .promo-carousel-container {
        margin: 20px 0;
    }

    .carousel-inner {
        border-radius: 10px;
        overflow: hidden;
    }

    .carousel-item img {
        height: 400px;
        object-fit: cover;
    }

    .carousel-caption {
        background: rgba(0,0,0,0.5);
        border-radius: 10px;
        padding: 20px;
        bottom: 40px;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Auto-rotate every 5 seconds
        var myCarousel = new bootstrap.Carousel(document.getElementById('promoCarousel'), {
            interval: 3000
        });
    });
</script>