@{
    ViewData["Title"] = "Home | BuyAlot Online Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<section class="hero mb-5 py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h1 class="display-4 fw-bold mb-3">Welcome to BuyAlot Online Store</h1>
                <p class="lead mb-4">Discover amazing products at unbeatable prices.</p>
                <a href="/ECommerce" class="btn btn-primary btn-lg">Shop Now</a>
            </div>
            <div class="col-lg-6">
                <img src="~/images/logo.png" class="img-fluid rounded shadow" alt="Online Shopping">
            </div>
        </div>
    </div>
</section>

<section class="carousel-section mb-5 px-3 py-4">
    <div class="container">
        <div id="promoCarousel" class="carousel slide mx-auto" data-bs-ride="carousel" style="max-width: 800px; border-radius: 12px; overflow: hidden;">
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <img src="~/images/drone.png" class="d-block w-100 carousel-img clickable-product"

                         data-product-id="13"
                         data-product-name="Drone with HD Camera"
                         data-product-price="R 1,799.99"
                         data-product-desc="Quadcopter with HD camera and GPS tracking. Perfect for aerial photography and videography with 4K UHD resolution."
                         data-product-specs='{"Brand":"SkyMaster","Model":"SM-500","Camera":"4K UHD","Flight Time":"30 minutes","Range":"5 km","GPS":"Yes","Warranty":"1 year"}'
                         alt="Drone">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Premium Drone</h5>
                        <p>R 1,799.99</p>
                    </div>
                </div>

                <div class="carousel-item">
                    <img src="~/images/laptop bag.jpg" class="d-block w-100 carousel-img clickable-product"
                         data-product-id="5"
                         data-product-name="Premium Laptop Backpack"
                         data-product-price="R 399.99"
                         data-product-desc="Ergonomic backpack with USB charging port and water-resistant material. Fits up to 15.6 inch laptops."
                         data-product-specs='{"Brand":"TravelGear","Model":"TG-200","Capacity":"15.6 inch","Material":"Polyester","Color":"Black/Gray","Features":"USB charging port, water resistant","Warranty":"2 years"}'
                         alt="Laptop Backpack">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Laptop Backpack</h5>
                        <p>R 399.99</p>
                    </div>
                </div>

                <div class="carousel-item">
                    <img src="~/images/t.jpeg" class="d-block w-100 carousel-img clickable-product"
                         data-product-id="11"
                         data-product-name="10-inch Android Tablet"
                         data-product-price="R 1,299.99"
                         data-product-desc="High-performance tablet with HD display and expandable storage. Perfect for work and entertainment."
                         data-product-specs='{"Brand":"TabTech","Model":"TT-100","Screen":"10.1-inch HD","Storage":"64GB (expandable)","OS":"Android 12","Battery":"6000mAh","Warranty":"1 year"}'
                         alt="Tablet">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Android Tablet</h5>
                        <p>R 1,299.99</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#promoCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#promoCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>

